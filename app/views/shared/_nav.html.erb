<div class="row">
  <div class="col-md-3 col-md-offset-9 sidebar">
      <div class="mini-submenu">
        <i class="fa fa-search fa-5x pull-right"></i>
      </div>
    <div class="list-group">
      <span href="#" class="list-group-item active">
        Browse Urls
        <span class="pull-right" id="slide-submenu">
          <i class="fa fa-times"></i>
        </span>
      </span>
      <%= link_to "Sort By Popularity", urls_path(sort: 'popularity'), class: "list-group-item" %>
      <%= link_to "Sort By Most Recent", urls_path(sort: 'most-recent'), class: "list-group-item" %>
      <%= link_to "View All", urls_path, class: "list-group-item" %>

    </div>
  </div>
</div>


    <script>
    $("#text_box").keyup(function() {
      $("li").hide();
      var term = $(this).val();
      $("li:contains('"+ term +"')").show();
    });
    </script>


<script>
$('.mini-submenu').hide();
$(function(){

  $('.mini-submenu').on('click',function(){
    $(this).next('.list-group').toggle('slide');
    $('.mini-submenu').hide();
  })
})

$('#slide-submenu').on('click',function() {
  $(this).closest('.list-group').fadeOut('slide',function(){
    $('.mini-submenu').fadeIn();
  });

});


</script>
