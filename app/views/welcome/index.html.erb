<div class="row welcome-header">
  <div class="col-md-8 col-md-offset-2">
    <h1>Stytta <span class="link-text"><%= image_tag "link.png" %> Unleash the link</span></h1>
  </div>
</div>
<div class="row create-shortened-url">
  <div class="col-md-3 col-md-offset-3">
    <%= form_for @url do |f| %>
    <%= f.text_field :original_url, required: true %>
    <%= f.submit class: "btn btn-info"%>
    <% end %>
  </div>
<div class="col-md-6 octo">
  <%= image_tag "info-octo2.png" %>
</div>
</div>

<div class="row inner-well">
  <div class="col-md-2 col-md-offset-1" id="url-title">
    <h1>Urls</h1>
  </div>
  <div class="col-md-3 col-md-offset-6" id="search-dropdown">
    <%= render 'shared/nav' %>
  </div>
</div>

<div class="row search-bubble">
  <div class="col-md-11 col-md-offset-1" id="url-title">
    <form>
      <input type="text" id="text_box"/><span class="filter-text-index"><%= image_tag "filter-arrow.png" %></span>
    </form>
  </div>
</div>

<%= render 'shared/urls_display' %>

<script>
$("#text_box").keyup(function() {
$.expr[":"].contains = $.expr.createPseudo(function(arg) {
    return function( elem ) {
        return $(elem).text().toUpperCase().indexOf(arg.toUpperCase()) >= 0;
    };
});

  $("li").hide();
  var term = $(this).val();
  $("li:contains('"+ term +"')").show();
});

$(document).ready(function() {
    setTimeout(hideFlashes, 1000);
});

var hideFlashes = function() {
  $("#flash_notice, #flash_error").fadeOut(1000);
}
</script>
